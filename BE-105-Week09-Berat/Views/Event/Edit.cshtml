@model EventModel
@{
    ViewData["Title"] = "Edit Event";
}

<h1>@ViewData["Title"]</h1>

@if (ViewBag.ErrorMessage is not null)
{
    <div class="alert alert-danger my-2" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

<div class="row">
    <div class="col-6">
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label for="username">Title</label>
                <input class="form-control" type="text" asp-for="Title" id="title" />
            </div>
            <div class="form-group">
                <label for="email">Description</label>
                <input class="form-control" type="text" asp-for="Description" id="description" />
            </div>
            <div class="form-group">
                <label for="password">Date</label>
                <input class="form-control" type="datetime" asp-for="Date" id="date" />
            </div>
            <div class="form-group">
                <button class="btn btn-success mt-2" type="submit">Submit</button>
                <a class="btn btn-outline-secondary" " " href="/Event/Index">Cancel</a>
            </div>
        </form>
    </div>
</div>
